<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div style="background-color: yellowgreen; display: block; margin: 20px 110px 5px 110px; padding: 20px 40px 30px 40px; color: white">
            <div>
                <p class="site-title">@Html.ActionLink("Cash Flow Manager", "Index", "Home")</p>
            </div>
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
        </div>
        <div id="navigationBar">
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (WebSecurity.IsAuthenticated)
                    {
                        if (Roles.IsUserInRole(WebSecurity.CurrentUserName, "Admin"))
                        {
                            <li>@Html.ActionLink("Practices", "Index", "Setup")</li>
                        }
                    }
                    @if (WebSecurity.IsAuthenticated)
                    {
                        if ((Roles.IsUserInRole(WebSecurity.CurrentUserName, "Admin") || Roles.IsUserInRole(WebSecurity.CurrentUserName, "User")))
                        {
                            <li>@Html.ActionLink("Clients", "Index", "Client", new {practiceId = Session["practiceId"]},null)</li>                            
                        }
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </nav>
        </div>

    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
